{
  "hooks": {
    "PostToolUse": [
      {
        "description": "Run quality checks after file modifications",
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/quality/validate-quality-gates.sh",
            "timeout": 30000
          }
        ]
      }
    ]
  }
}
